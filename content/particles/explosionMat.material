
/////////////////////////////////////////////////////
// Material used for bright explosion parts
/////////////////////////////////////////////////////
material explosion/explosionMatl
{
	technique
	{
		pass
		{
			lighting off
			depth_write off
			scene_blend add

			texture_unit
			{
				texture textures/explosion.png
			}
		}
	}
}

